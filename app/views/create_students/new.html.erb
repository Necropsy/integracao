<%= simple_form_for @student, url: create_students_path do |f| %>
  <%= f.input :name, placeholder: 'Digite o nome do usuario' %>
  <%= f.input :email, placeholder: 'Digite o email do usuario' %>
  <%= f.input :password, placeholder: 'Minimo 6 caracteres' %>
  <%= f.input :password_confirmation, placeholder: 'Minimo 6 caracteres' %>
  <%= f.input :tel, placeholder: '3333-3333' %>
  <%= f.input :age %>
  <%= f.button :submit %>
<% end %>
